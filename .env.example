# Telegram Bot Token (получить у @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# GitHub Personal Access Token
# Минимум: repo (для приватных) или public_repo (для публичных)
# Для webhooks добавьте: admin:repo_hook
GITHUB_TOKEN=your_github_personal_access_token

# Redis настройки (для Docker используйте redis, для локальной разработки - localhost)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Webhook настройки (для мгновенных уведомлений с полными коммитами)
# Для локальной разработки используйте ngrok:
#   1. Запустите: ngrok http 8080
#   2. Скопируйте URL (например: https://abc123.ngrok-free.app)
#   3. Вставьте его ниже
# Для продакшена используйте ваш публичный домен
WEBHOOK_HOST=http://localhost
WEBHOOK_PORT=8080
WEBHOOK_SECRET=change_this_secret_key

